<% if @user.errors.any? %>
  <div>
    <div class="message is-danger">
      <div class="message-body has-text-weight-bold">
        <%= @user.errors.count %>件のエラーがあります:
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
